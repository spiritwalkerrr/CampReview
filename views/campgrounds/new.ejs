<% layout("layouts/boilerplate")%>
<div class="row">
    <h1 class="text-center my-4">New Campground</h1>
    <div class="col-lg-6 offset-lg-3">
        <form method="POST" action="/campgrounds" novalidate class="validatedForm" enctype="multipart/form-data">
            <div>
                <label class="form-label my-1" for="title">Name:</label>
                <input type="text" class="form-control my-1" name="campground[title]" id="title" required>
                <div class="invalid-feedback">Please enter a Campground Name.</div>
            </div>
            <div>
                <label class="form-label my-1" for="location">Location:</label>
                <input type="text" class="form-control my-1" name="campground[location]" id="location" required>
                <div class="invalid-feedback">Please enter a Location.</div>
            </div>
            <div>
                <label class="form-label my-1" for="price">Price:</label>
                <div class="input-group my-1">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" name="campground[price]" aria-label="Amount (to the nearest dollar)" required>
                    <div class="invalid-feedback">Please enter a Price per Night.</div>
                  </div>
            </div>
            <div>
                <label class="form-label my-1" for="description">Description:</label>
                <input type="text" class="form-control my-1" name="campground[description]" id="description" required>
                <div class="invalid-feedback">Please enter a Description.</div>
            </div>
            <div>
                <label class="form-label my-1" for="image">Upload Image:</label>
                <input class="form-control my-1"type="file" name="image" id="image" multiple>
            </div>
            <button class="btn btn-outline-success btn-block my-2">Add new Campground</button>
        </form>
        <a href="/campgrounds" class="btn my-2 btn-block btn-outline-primary">Back to all Campgrounds</a>
    </div>
</div>
<script src="/javascript/validateForms.js"></script>