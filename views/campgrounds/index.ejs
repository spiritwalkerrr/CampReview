<% layout("layouts/boilerplate")%>
<div id="map" style="width: 100%; height: 40vh">

</div>
<h1 class="my-5">All our Campgrounds</h1>
<% for (let campground of campgrounds){%>
<div class="card my-2 p-1">
    <div class="row">
        <div class="col-md-4">
            <% if(campground.images.length){ %>
            <img src="<%=campground.images[0].url%>" class="img-fluid" alt=""
                style="width: 100%; background-size: cover">
            <%} else { %>
            <img src="https://www.oregonlive.com/resizer/0FVk7bpZHdb--Lw10Y-443t0ylM=/450x0/smart/arc-anglerfish-arc2-prod-advancelocal.s3.amazonaws.com/public/DUNWFNGOAVCRLAHO4ZPTBKNJEM.jpg"
                alt="">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%=campground.title%></h5>
                <p class="card-text"><%=campground.description%></p>
                <p><small class="text-muted"><%=campground.location%></small></p>
                <a href="/campgrounds/<%=campground.id%>" class="btn btn-outline-primary">Details</a>
            </div>
        </div>
    </div>
</div>
<%}%>
<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN%>";
    const campgrounds = { features: <%- JSON.stringify(campgrounds)%>}
</script>
<script src="/javascript/clusterMap.js"></script>